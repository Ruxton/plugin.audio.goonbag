<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.audio.goonbag" version="0.5" name="Goonbag Radio" provider-name="Ruxton">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Listen to live streams from Goonbag Radio.</summary>
        <description>Check out http://goonbag.com</description>
        <platform>all</platform>
    </extension>
    <extension point="xbmc.addon.repository" name="Ruxton's XBMC Addon Repository">
        <info compressed="false">https://raw.github.com/Ruxton/xbmc-addon-repo/master/addons.xml</info>
        <checksum>https://raw.github.com/Ruxton/xbmc-addon-repo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/Ruxton/xbmc-addon-repo/raw/master/repo/</datadir>
    </extension>
</addon>
